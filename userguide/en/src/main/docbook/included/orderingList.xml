                    <row>
                        <entry>doSortAscending()</entry>
                        <entry>Invert current sorting</entry>
                        <entry>Component</entry>
                    </row>
                    <row>
                        <entry>doSortDescending()</entry>
                        <entry/>
                        <entry>Component</entry>
                    </row>
                    <row>
                        <entry>doSort()</entry>
